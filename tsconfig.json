{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    // On place la racine du code dans la racine du projet
    "baseUrl": ".",

    // Alias pour lâ€™architecture feature-driven + alias @shared pointant sur components/
    "paths": {
      "@features/*": ["src/features/*"],
      "@shared/*":   ["components/*"]
    }
  },

  // On inclut tout le code TS/TSX et le dossier components/
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "components/**/*"
  ],

  // On exclut node_modules et le build Next.js
  "exclude": [
    "node_modules",
    ".next"
  ]
}
